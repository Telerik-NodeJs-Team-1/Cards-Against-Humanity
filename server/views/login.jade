.navbar-right(ng-controller="LoginController" style="margin-right:20px")
    if !user
        form.navbar-form(action="/identity/login", method="post")
            .form-group
                if errors
                    .alert.alert-danger.form-group(style="line-height:20px;display:inline-block!important;padding:6px!important; margin-right:10px") #{errors}
                input.form-control(type="text", placeholder="Username", name="username")
                input.form-control(type="password", placeholder="Password", name="password")
            button.btn.btn-default Log In
            a.btn.btn-default(href="/identity/signup") Sign Up

form(action="identity/logout" method="post")
    ul.nav.navbar-nav.navbar-right
        li.dropdown
            if user
                a.dropdown-toggle(style="margin-right:50px" href="", data-toggle="dropdown") #{user.firstName + ' ' + user.lastName}&nbsp;
                    span.badge(style="background-color:#ddd!important;height:20px;line-height:15px;") #{user.points} points total
                    span.caret
                ul.dropdown-menu(style="margin-right:50px")
                    if user && user.roles.indexOf('admin') > -1
                        li
                            a(href="/identity/users") Users
                    li
                        a(href="/identity/profile") Profile
                    li
                        button Log Out